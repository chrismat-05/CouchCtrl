    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noEmit": false,
    "allowJs": true,
    "checkJs": false,
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
